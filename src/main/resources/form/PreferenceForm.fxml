                <padding>
                    <Insets left="5.0" top="5.0"/>
                </padding>
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>
            <Label text="Ignore Updates" GridPane.halignment="LEFT" GridPane.rowIndex="3" GridPane.valignment="TOP">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
                <padding>
                    <Insets left="5.0" top="5.0"/>
                </padding>
            </Label>
            <Label text="Sets whether the program will run in offline mode, will not check for updates."
                   textFill="#8a8a8a" wrapText="true" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
                <padding>
                    <Insets left="5.0"/>
                </padding>
                <font>
                    <Font name="System Italic" size="12.0"/>
                </font>
            </Label>
