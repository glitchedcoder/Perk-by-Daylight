                <GridPane.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </GridPane.margin>
            </Button>
            <Button defaultButton="true" mnemonicParsing="false" onAction="#onSave" prefHeight="25.0" prefWidth="65.0"
